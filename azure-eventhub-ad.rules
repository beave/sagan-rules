# These rules read JSON,  so Sagan message JSON processing needs to be enabled within your sagan.yaml

alert any $HOME_NET any -> $EXTERNAL_NET any (msg: "[AZURE EVENTHUB AD] Risk Event Detected - unlikelyTravel"; program: azureEventHub; json_content:"riskEventTypes","unlikelyTravel"; json_contains; classtype: suspicious-traffic; reference:url,https://docs.microsoft.com/en-us/azure/active-directory/reports-monitoring/reference-azure-monitor-sign-ins-log-schema; sid:5004760; rev: 2;)

alert any $HOME_NET any -> $EXTERNAL_NET any (msg: "[AZURE EVENTHUB AD] Risk Event Detected - anonymizedIPAddress"; program: azureEventHub; json_content:"riskEventTypes","anonymizedIPAddress"; json_contains; classtype: suspicious-traffic; reference:url,https://docs.microsoft.com/en-us/azure/active-directory/reports-monitoring/reference-azure-monitor-sign-ins-log-schema; sid:5004761; rev: 2;)

